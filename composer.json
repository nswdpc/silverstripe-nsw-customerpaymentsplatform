{
    "name": "nswdpc/silverstripe-nsw-customerpaymentsplatform",
    "description": "Silverstripe integration with the NSW Government Customer Payments Platform",
    "type": "silverstripe-vendormodule",
    "keywords": [
        "silverstripe",
        "nsw",
        "payments",
        "omnipay",
        "oauth2"
    ],
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "James Ellis",
            "homepage": "https://dpc.nsw.gov.au",
            "role": "Developer"
        }
    ],
    "require": {
        "nswdpc/omnipay-nswcpp" : "dev-master",
        "silverstripe/silverstripe-omnipay" : "^3",
        "symbiote/silverstripe-queuedjobs" : "^4.6",
        "lekoala/silverstripe-cms-actions" : "^1.1",
        "silvershop/silverstripe-hasonefield" : "^3",
        "codem/silverstripe-html5-inputs" : "^0.1"
    },
    "suggest" : {
        "silvershop/core" : "Provides a storefront interface for taking payments"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7 | ^7 | ^8 | ^9",
        "squizlabs/php_codesniffer": "^3.0",
        "friendsofphp/php-cs-fixer": "^2.18",
        "codeception/codeception" : "^2.5 | ^3 | ^4"
    },
    "autoload": {
        "psr-4": {
            "NSWDPC\\Payments\\CPP\\" : "src/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "expose": [
            "client/dist"
        ]
    },
    "repositories" : [
        {
            "type": "vcs",
            "url": "git@github.com:nswdpc/omnipay-nswcpp.git"
        }
    ]
}
